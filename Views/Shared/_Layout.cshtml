<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Escolar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .sidebar {
            width: 240px;
            background-color: #1b4965;
            min-height: 100vh;
            color: white;
        }

            .sidebar .nav-link {
                color: #dbe2ef;
                font-weight: 500;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #0d6efd;
                    color: white !important;
                }

            .sidebar h4 {
                padding: 20px;
                font-weight: bold;
                border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            }

        .topbar {
            height: 60px;
            background: white;
            border-bottom: 1px solid #ddd;
        }

        .content-wrapper {
            margin-left: 240px;
        }

        body {
            background-color: #f8f9fa;
        }
    </style>
</head>

<body>

    <div class="sidebar position-fixed">
        <h4 class="text-center">
            <i class="bi bi-mortarboard-fill me-2"></i>
            Aulalink
        </h4>

        <nav class="nav flex-column px-2">
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door me-2"></i> Inicio
            </a>

            <a class="nav-link" asp-controller="Rols" asp-action="Index">
                <i class="bi bi-people me-2"></i> Roles
            </a>

            <a class="nav-link" asp-controller="Estudiantes" asp-action="Index">
                <i class="bi bi-person-video3 me-2"></i> Estudiantes
            </a>

            <a class="nav-link" asp-controller="Gradoes" asp-action="Index">
                <i class="bi bi-journal-bookmark me-2"></i> Cursos
            </a>

            <a class="nav-link" asp-controller="Matriculas" asp-action="Index">
                <i class="bi bi-file-earmark-text me-2"></i> Matrículas
            </a>

            <a class="nav-link" asp-controller="Reportes" asp-action="Index">
                <i class="bi bi-bar-chart-line me-2"></i> Reportes
            </a>
        </nav>
    </div>

    <div class="content-wrapper">

        <div class="topbar d-flex align-items-center px-4 justify-content-between">
            <h5 class="mb-0">@ViewData["Title"]</h5>

            <div>
                <span class="me-3">
                    <i class="bi bi-person-circle me-1"></i> Admin
                </span>
                <a class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-box-arrow-right"></i> Salir
                </a>
            </div>
        </div>

        <main class="p-4">
            @RenderBody()
        </main>

        <footer class="text-center py-3 text-muted small">
            © 2025 Aulalink
        </footer>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
